#!/bin/sh
MODE="$1"
FILE="$2"
shift 2
if [ -d "$FILE" ]; then
    SRC="$FILE"
else
    SRC="server:$FILE"
fi
ARGS=". -avz --delete $@"
case $MODE in
    time)
        exec rsync "$SRC/" $ARGS
        ;;
    size)
        exec rsync "$SRC/" $ARGS --size-only
        ;;
    hash)
        exec rsync "$SRC/" $ARGS --checksum
        ;;
esac
