[DEFAULT]
git_update =
	git pull
	git submodule update --init --recursive
lib =
	tar_checkout() {
		file=${1##*/}
		wget -q $1
		tar xf $file
		rm $file
	}
	tar_update() {
		file=${1##*/}
		fldr=${PWD##*/}
		cd ..
		wget -q $1
		rm -rf $fldr
		tar xf $file
		rm $file
	}

