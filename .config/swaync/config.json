{
  "widgets": [
    "menubar",
    "volume",
    "backlight",
    "mpris",
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "menubar": {
      "menu#power": {
        "label": "\udb81\udc25",
        "position": "right",
        "actions": [{
          "label": "Shutdown",
          "command": "systemctl poweroff"
        }, {
          "label": "Suspend",
          "command": "systemctl suspend"
        }, {
          "label": "Logout",
          "command": "hyprctl dispatch exit"
        }]
      }
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "volume": {
      "show-per-app": true
    },
    "backlight": {
      "device": "edp-backlight"
    }
  }
}
