set $mod mod4
set $term foot
set $menu wofi -GIS drun -p ''

output eDP-1 scale 1.5

output * bg #000000 solid_color
input type:touchpad {
    natural_scroll enabled
    tap enabled
}
seat * hide_cursor {
    8000
    when-typing enable
}

set $command 
set $move 󰆾
set $resize 󰩨

bindsym $mod+left focus left
bindsym $mod+down focus down
bindsym $mod+up focus up
bindsym $mod+right focus right

bindsym --release super_l mode $command
mode $command {
    bindsym super_l mode default
    bindsym shift_l mode $move
    bindsym shift_r mode $move
    bindsym control_l mode $resize
    bindsym control_r mode $resize

    bindsym return mode default, exec $menu
    bindsym backslash mode default, exec $term
    bindsym l mode default, exec swaylock
    bindsym r mode default, reload
    bindsym n mode default, exec swaync-client -t -sw

    bindsym escape mode default, kill
    bindsym f mode default, fullscreen

    bindsym left focus left
    bindsym down focus down
    bindsym up focus up
    bindsym right focus right

    bindsym 1 mode default, workspace number 1
    bindsym 2 mode default, workspace number 2
    bindsym 3 mode default, workspace number 3
    bindsym 4 mode default, workspace number 4
    bindsym 5 mode default, workspace number 5
    bindsym 6 mode default, workspace number 6
    bindsym 7 mode default, workspace number 7
    bindsym 8 mode default, workspace number 8
    bindsym 9 mode default, workspace number 9
    bindsym 0 mode default, workspace number 10

    bindsym backspace mode default, scratchpad show
}

mode $move {
    bindsym super_l mode default
    bindsym shift_l mode default
    bindsym shift_r mode default
    bindsym control_l mode $resize
    bindsym control_r mode $resize

    bindsym left move left
    bindsym down move down
    bindsym up move up
    bindsym right move right

    bindsym 1 mode default, move container to workspace number 1, workspace number 1
    bindsym 2 mode default, move container to workspace number 2, workspace number 2
    bindsym 3 mode default, move container to workspace number 3, workspace number 3
    bindsym 4 mode default, move container to workspace number 4, workspace number 4
    bindsym 5 mode default, move container to workspace number 5, workspace number 5
    bindsym 6 mode default, move container to workspace number 6, workspace number 6
    bindsym 7 mode default, move container to workspace number 7, workspace number 7
    bindsym 8 mode default, move container to workspace number 8, workspace number 8
    bindsym 9 mode default, move container to workspace number 9, workspace number 9
    bindsym 0 mode default, move container to workspace number 10, workspace number 10

    bindsym backspace mode default, move scratchpad
    bindsym s mode default, sticky toggle
}

mode $resize {
    bindsym super_l mode default
    bindsym shift_l mode $move
    bindsym shift_r mode $move
    bindsym control_l mode default
    bindsym control_r mode default

    bindsym left resize shrink width 10px
    bindsym down resize grow height 10px
    bindsym up resize shrink height 10px
    bindsym right resize grow width 10px
}

#
# Layout stuff:
#

    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

#
# Style
#

set $c0 #ffffff00
set $c3 #ffffff33
set $c6 #ffffff66
set $c9 #ffffff99
set $cc #ffffffcc
set $cf #ffffffff

font pango:Noto Sans Mono, Symbols Nerd Font 10
default_border pixel 2
smart_borders on
client.focused          $c3 $c3 $cc $c6
client.focused_inactive $c0 $c0 $c6 $c0
client.unfocused        $c0 $c0 $c6 $c0

#
# Bar
#

bar {
    position top
    status_command i3status-rs
    colors {
        separator           $c0
        statusline          $cc
        focused_workspace   $c3 $c3 $cc
        active_workspace    $c3 $c0 $cc
        inactive_workspace  $c0 $c0 $cc
        urgent_workspace    $c6 $c6 $cf
        binding_mode        $c0 $c0 $c6
    }
}
exec sworkstyle
exec swaync

#
# Builtins
#

for_window [app_id="blueberry.py"] floating enable
for_window [app_id="org.twosheds.iwgtk"] floating enable
for_window [app_id="pavucontrol"] floating enable

#
# Miscellaneous
#

floating_modifier $mod normal
focus_follows_mouse no
xwayland disable
seat * xcursor_theme graphite-dark

include /etc/sway/config.d/*
