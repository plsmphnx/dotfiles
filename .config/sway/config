set $mod mod4
set $term foot
set $menu wofi -GIS drun -p ''

output eDP-1 scale 1.5

output * bg #000000 solid_color
input type:touchpad {
    natural_scroll enabled
    tap enabled
}
seat * hide_cursor {
    8000
    when-typing enable
}

bindsym --release super_l mode 
mode  {
    bindsym super_l mode default

    #
    # Shortcuts
    #

    bindsym return mode default, exec $menu
    bindsym backslash mode default, exec $term
    bindsym l mode default, exec swaylock
    bindsym r mode default, reload

    #
    # Window
    #

    bindsym escape mode default, kill
    bindsym f mode default, fullscreen

    #
    # Movement
    #

    bindsym shift+left move left
    bindsym shift+down move down
    bindsym shift+up move up
    bindsym shift+right move right

    #
    # Resizing
    #

    bindsym control+left resize shrink width 10px
    bindsym control+down resize grow height 10px
    bindsym control+up resize shrink height 10px
    bindsym control+right resize grow width 10px

    #
    # Workspaces
    #

    bindsym 1 mode default, workspace number 1
    bindsym 2 mode default, workspace number 2
    bindsym 3 mode default, workspace number 3
    bindsym 4 mode default, workspace number 4
    bindsym 5 mode default, workspace number 5
    bindsym 6 mode default, workspace number 6
    bindsym 7 mode default, workspace number 7
    bindsym 8 mode default, workspace number 8
    bindsym 9 mode default, workspace number 9
    bindsym 0 mode default, workspace number 10

    bindsym shift+1 mode default, move container to workspace number 1, workspace number 1
    bindsym shift+2 mode default, move container to workspace number 2, workspace number 2
    bindsym shift+3 mode default, move container to workspace number 3, workspace number 3
    bindsym shift+4 mode default, move container to workspace number 4, workspace number 4
    bindsym shift+5 mode default, move container to workspace number 5, workspace number 5
    bindsym shift+6 mode default, move container to workspace number 6, workspace number 6
    bindsym shift+7 mode default, move container to workspace number 7, workspace number 7
    bindsym shift+8 mode default, move container to workspace number 8, workspace number 8
    bindsym shift+9 mode default, move container to workspace number 9, workspace number 9
    bindsym shift+0 mode default, move container to workspace number 10, workspace number 10

    #
    # Scratchpad
    #

    bindsym shift+backspace mode default, move scratchpad
    bindsym backspace mode default, scratchpad show
}

#
# Movement
#

bindsym $mod+left focus left
bindsym $mod+down focus down
bindsym $mod+up focus up
bindsym $mod+right focus right

#
# Layout stuff:
#

    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

#
# Style
#

set $c0 #ffffff00
set $c4 #ffffff44
set $c8 #ffffff88
set $cc #ffffffcc
set $cf #ffffffff

font NotoSansMNerdFontPropo 10
default_border pixel 2
smart_borders on
client.focused          $c4 $c4 $cc $c8
client.focused_inactive $c0 $c0 $c8 $c0
client.unfocused        $c0 $c0 $c8 $c0

#
# Bar
#

bar {
    position top
    status_command i3status-rs
    colors {
        separator           $c0
        statusline          $cc
        focused_workspace   $c4 $c4 $cc
        active_workspace    $c4 $c0 $cc
        inactive_workspace  $c0 $c0 $cc
        urgent_workspace    $c8 $c8 $cf
    }
}
exec sworkstyle

#
# Miscellaneous
#

floating_modifier $mod normal
focus_follows_mouse always
xwayland enable

include /etc/sway/config.d/*
